{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "noEmitHelpers": true,
    "importsNotUsedAsValues": "remove",
    "allowImportingTsExtensions": true,
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM.Iterable"
    ],
    "sourceMap": true,
    "noEmit": true,
    "sourceRoot": "./src",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "preserve",
    "jsxFactory": "createElement",
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src"
  ]
}