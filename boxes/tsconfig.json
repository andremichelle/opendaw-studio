{
  "compilerOptions": {
    "paths": {
      "@/*": [
        "../app/src/*"
      ]
    },
    "target": "ESNext",
    "module": "commonjs",
    "esModuleInterop": true,
    "useDefineForClassFields": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "experimentalDecorators": true
  }
}