{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "useDefineForClassFields": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "lib": [
      "ESNext",
      "dom",
      "dom.iterable"
    ]
  }
}