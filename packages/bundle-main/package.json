{
  "name": "@opendaw/bundle-main",
  "version": "0.0.1",
  "description": "OpenDAW main thread bundle - adapters, boxes, and utilities for web audio applications",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": ["dist/**/*", "package.json", "README.md"],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "watch": "tsup src/index.ts --format esm,cjs --dts --watch",
    "test": "echo \"no tests yet\"",
    "prepublishOnly": "npm run build",
    "pack:test": "npm pack",
    "test:local": "npm run build && npm pack && echo 'Package ready for local testing'"
  },
  "keywords": ["audio", "opendaw", "music", "daw", "main-thread", "adapters"],
  "author": "Andre Michelle",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/andre-michelle/opendaw-studio.git",
    "directory": "packages/bundle-main"
  },
  "dependencies": {
    "@types/audioworklet": "^0.0.77"
  },
  "devDependencies": {
    "typescript": "^5.8.3",
    "tsup": "^8.4.0",
    "vitest": "^3.1.3",
    "lib-std": "*",
    "lib-dsp": "*",
    "lib-box": "*",
    "lib-runtime": "*",
    "lib-fusion": "*",
    "studio-enums": "*",
    "studio-boxes": "*",
    "studio-adapters": "*"
  },
  "publishConfig": {
    "access": "public"
  }
} 