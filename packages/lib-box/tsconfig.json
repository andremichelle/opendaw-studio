{
  "compilerOptions": {
    "esModuleInterop": true,
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "strict": true,
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "module": "ESNext",
    "noEmit": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ]
  }
}
