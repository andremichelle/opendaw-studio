{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "allowJs": true,
    "useDefineForClassFields": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "strict": true,
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "module": "ESNext",
    "noEmit": true,
    "lib": ["ESNext", "dom", "dom.iterable"],
    "jsx": "preserve",
    "jsxFactory": "createElement"
  }
}